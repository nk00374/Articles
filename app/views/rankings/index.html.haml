%h1 Listing rankings

%table
  %thead
    %tr
      %th Name
      %th Rank
      %th
      %th
      %th

  %tbody
    - @rankings.each do |ranking|
      %tr
        %td= ranking.name
        %td= ranking.rank
        %td= link_to 'Show', ranking
        %td= link_to 'Edit', edit_ranking_path(ranking)
        %td= link_to 'Destroy', ranking, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Ranking', new_ranking_path
