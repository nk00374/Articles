.wrapper
	.col-md-8.col-md-offset-2.col-xs-12
		.panel.panel-default
			.panel-body
				.page
					-#Content body. allows the user to edit a review
					%h1= @article["title"]
					%h3= @article["body"][0]["model"]["text"]
					%p= @article["body"][1]["model"]["text"]
					-#Changed the default size so that the image is responsive
					%img{:src=>"#{@url}", :width=>"100%", :alt=> "#{:@altText}"}
					%p
					%p= @article["body"][3]["model"]["text"]
					%p= @article["body"][4]["model"]["text"]
					%ul
						%li= @article["body"][5]["model"]["items"][0]
						%li= @article["body"][5]["model"]["items"][1]
			-#footer
			.panel-footer
				.row
					.col-md-12
						.btn-group.pull-right
							= button_to @button, {:action=>"updateRead", :controller=>"rankings", :id=>1} , :method=>:patch, class: "btn btn-default"