.wrapper
	.col-md-8.col-md-offset-2.col-xs-12
		.panel.panel-default
			.panel-body
				.page
					-#Content body. allows the user to edit a review
					%h1= @article["title"]
					%h3= @article["body"][0]["model"]["text"]
					-#Changed the default size so that the image is responsive
					%img{:src=>"#{@url1}", :width=>"100%", :alt=> "#{:@altText1}"}
					%p
					%p= @article["body"][2]["model"]["text"]
					%p= @article["body"][3]["model"]["text"]
					%img{:src=>"#{@url2}", :width=>"100%", :alt=> "#{:@altText2}"}
					%p
					%p= @article["body"][5]["model"]["text"]
					%img{:src=>"#{@url3}", :width=>"100%", :alt=> "#{:@altText3}"}
					%p
					%p= @article["body"][7]["model"]["text"]
			-#footer
			.panel-footer
				.row
					.col-md-12
						.btn-group.pull-left
							%h4
								#{t(".article")}
						.btn-group.pull-right
							= button_to @button, {:action=>"updateRead", :controller=>"rankings", :name=>"Article 2"} , :method=>:patch, class: "btn btn-default"
